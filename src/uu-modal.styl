$padding = 25px
$smallPadding = 15px
$borderRadius = 3px

@keyframes fadeIn
  0%
    opacity: 0
    transform(translateY(-20px))
  100%
    opacity: 1
    transform(translateY(0))

@keyframes fadeOut
  0%
    opacity: 1
    transform(translateY(0))
  100%
    opacity: 0
    transform(translateY(-20px))

.animation--fade-in-out
  animation-duration(0.25s)
  animation-timing-function(ease)
  animation-fill-mode(both)
  transition: all 0.25s ease-in-out

  &.is-active
    visibility: visible
    animation-name(fadeIn)
  &.not-active
    visibility: hidden
    animation-name(fadeOut)

.uu-modal
  visibility: hidden
  box-sizing: border-box
  width: 98%
  position: fixed
  top: 50px
  left: 1%
  z-index: 1
  background-color: #fff
  outline: 9999px solid rgba(0,0,0,0.25)
  box-shadow(0px 0px 25px 10px rgba(0,0,0,0.4))
  border-radius($borderRadius)

.uu-close
  float: right
  cursor: pointer
  opacity: 0.3
  margin: 0 0 0 0

.uu-modal-header
  padding $smallPadding $padding
  h2
    margin 0

.uu-modal-content
  padding: 0 $padding

.uu-modal-footer
  padding: 0 $padding
