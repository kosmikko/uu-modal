@import nib
@require "../node_modules/uu-grid/src/styles/lib/index"

$padding = 25px
$smallPadding = 15px
$borderRadius = 3px

@keyframes fadeIn
  0%
    opacity: 0
    transform: translate(-50%, -90%)
  100%
    opacity: 1

@keyframes fadeOut
  0%
    opacity: 1
  100%
    opacity: 0
    transform: translate(-50%, -90%)

.animation--fade-in-out
  animation-duration(0.25s)
  animation-timing-function(ease)
  animation-fill-mode(both)
  transition: visibility 0.25s

  &.is-active
    animation-name(fadeIn)
  &.not-active
    animation-name(fadeOut)

.uu-modal
  visibility: hidden
  box-sizing: border-box
  max-width: 98%
  position: absolute
  left: 50%
  top: 50%
  transform: translate(-50%, -50%)
  z-index: 1
  background-color: #fff
  outline: 9999px solid rgba(0,0,0,0.25)
  box-shadow(0px 0px 25px 10px rgba(0,0,0,0.4))
  border-radius($borderRadius)
  &.is-active
    visibility: visible
  &.not-active
    visibility: hidden

  &.fit-to-content
    padding: $padding 0

.uu-close
  float: right
  cursor: pointer
  opacity: 0.3
  margin: 0 0 0 0

.uu-modal-header
  padding $smallPadding $padding
  h2
    margin 0

.uu-modal-content
  padding: 0 $padding
  overflow: hidden

.uu-modal-footer
  padding: 0 $padding

+media('s')
  .uu-modal
    &.fit-to-content
      width: 98%

+media('m')
  .uu-modal
    min-width: 90%

+media('l')
  .uu-modal
    min-width: 800px

apply_media_cache()
